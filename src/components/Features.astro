---
interface Feature {
  title: string;
  description: string;
  icon: string;
}

interface Props {
  title?: string;
  features: Feature[];
}

const { 
  title = 'ClashMi 主要特点', 
  features 
} = Astro.props;
---

<section class="py-12 bg-white">
  <div class="container mx-auto px-4">
    {title && (
      <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">{title}</h2>
    )}
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {features.map((feature) => (
        <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100 hover:shadow-md transition-shadow duration-300">
          <div class="text-primary-500 mb-4" set:html={feature.icon} />
          <h3 class="text-xl font-semibold text-gray-900 mb-2">{feature.title}</h3>
          <p class="text-gray-600">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>