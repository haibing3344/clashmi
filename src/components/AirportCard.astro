---
interface Props {
  name: string;
  description: string;
  price: string;
  features: string[];
  url: string;
  discount?: string;
}

const {
  name,
  description,
  price,
  features,
  url,
  discount,
} = Astro.props;
---

<div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow duration-300">
  <div class="p-6">
    <div class="flex items-start justify-between mb-4">
      <h3 class="text-xl font-semibold text-gray-900">{name}</h3>
      {discount && <span class="text-xs bg-red-50 text-red-700 px-2 py-1 rounded-full">{discount}</span>}
    </div>
    
    <p class="text-gray-600 mb-4">{description}</p>
    
    <div class="mb-4">
      <p class="text-2xl font-bold text-primary-600">{price}</p>
    </div>
    
    <ul class="mb-6 space-y-2">
      {features.map((feature) => (
        <li class="flex items-start">
          <svg class="h-5 w-5 text-green-500 mr-2 mt-0.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
          <span class="text-gray-600">{feature}</span>
        </li>
      ))}
    </ul>
    
    <a 
      href={url} 
      class="w-full btn btn-primary flex justify-center"
      target="_blank"
      rel="noopener noreferrer"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
      访问官网
    </a>
  </div>
</div>