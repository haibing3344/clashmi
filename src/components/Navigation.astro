---
const navItems = [
  { text: '介绍', link: '/' },
  { text: '下载', link: '/download' },
  { text: '教程', link: '/tutorial' },
  { text: '机场推荐', link: '/airport' },
  { text: '常见问题', link: '/faq' },
];

const currentPath = Astro.url.pathname;
---

<nav class="bg-white shadow-sm">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center py-4">
      <a href="/" class="flex items-center space-x-2">
        <img src="/clashmi-logo.png" alt="ClashMi Logo" class="h-8 w-auto" />
        <span class="text-xl font-bold text-gray-900">ClashMi官网</span>
      </a>
      
      <!-- 桌面导航 -->
      <div class="hidden md:flex space-x-8">
        {navItems.map((item) => (
          <a
            href={item.link}
            class={`text-sm font-medium ${currentPath === item.link ? 'text-primary-600' : 'text-gray-500 hover:text-gray-900'}`}
          >
            {item.text}
          </a>
        ))}
      </div>
      
      <!-- 移动端导航按钮 -->
      <button id="mobile-menu-button" class="md:hidden flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="h-6 w-6">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <!-- 移动端导航菜单 -->
    <div id="mobile-menu" class="md:hidden hidden pb-4">
      <div class="flex flex-col space-y-2">
        {navItems.map((item) => (
          <a
            href={item.link}
            class={`px-2 py-1 rounded-md text-sm font-medium ${currentPath === item.link ? 'bg-primary-50 text-primary-600' : 'text-gray-500 hover:bg-gray-50 hover:text-gray-900'}`}
          >
            {item.text}
          </a>
        ))}
      </div>
    </div>
  </div>
</nav>

<script>
  // 移动端菜单切换
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>